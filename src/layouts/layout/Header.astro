---
import avatarImg from "./header/avatar.jpeg";
---

<header>
  <div class="logo">
    <img src={avatarImg} />
    <h1>Gabriel Karczewski</h1>
  </div>
  <nav>
    <a href="/">About me</a>
    <a href="/projects">Projects</a>
    <a href="/experience">Experience</a>
    <a href="https://github.com/nickelghost" target="_blank">GitHub</a>
  </nav>
</header>

<style>
  header {
    background: var(--color-primary);
    color: var(--color-accent);
  }

  .logo {
    align-items: center;
    display: grid;
    grid-template-columns: min-content 1fr;
    justify-content: space-around;
    padding: 100px 32px;
  }

  .logo img {
    border-radius: 100%;
    border: 4px solid #fafafc;
    vertical-align: middle;
    height: 64px;
  }

  .logo h1 {
    display: block;
    font-size: 1.25rem;
    font-weight: 600;
    text-align: center;
  }

  nav a {
    background: #142c3d;
    color: inherit;
    display: block;
    font-weight: 600;
    padding: 16px;
    text-align: center;
    text-decoration: none;
  }

  nav a:hover {
    filter: brightness(115%);
    transition: 0.2s ease-in-out;
  }
</style>
