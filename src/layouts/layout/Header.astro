---
import avatarImg from "./header/avatar.jpeg";
import menuImg from "./header/menu.svg";
---

<header>
  <div class="top" transition:persist>
    <div class="logo">
      <img alt="" src={avatarImg.src} />
      <h1>Gabriel Karczewski</h1>
    </div>
    <button id="hamburger" class="hamburger"
      ><img alt="menu icon" src={menuImg.src} /></button
    >
  </div>
  <nav>
    <a href="/">About me</a>
    <a href="/projects">Projects</a>
    <a href="/experience">Experience</a>
    <a href="https://github.com/nickelghost" target="_blank">GitHub</a>
  </nav>
</header>

<script>
  const navVisibleClass = "nav-mobile-visible";

  document.querySelector("#hamburger")?.addEventListener("click", (e) => {
    const nav = document.querySelector("nav");
    if (nav?.classList.contains(navVisibleClass)) {
      nav?.classList.remove(navVisibleClass);
    } else {
      nav?.classList.add(navVisibleClass);
    }
  });
</script>

<style>
  header {
    background: var(--color-primary);
    color: var(--color-text-secondary);
    height: 100vh;
    position: fixed;
    width: var(--header-width);
  }

  .logo {
    align-items: center;
    display: grid;
    grid-template-columns: min-content 1fr;
    justify-content: space-around;
    padding: 100px 32px;

    > img {
      border-radius: 100%;
      border: 4px solid var(--color-text-secondary);
      vertical-align: middle;
      height: 64px;
    }
  }

  .logo h1 {
    display: block;
    font-size: 1.25rem;
    font-weight: 600;
    text-align: center;
  }

  .hamburger {
    display: none;
  }

  nav a {
    background: color-mix(in srgb, var(--color-primary), black 25%);
    color: inherit;
    display: block;
    font-weight: 600;
    padding: 16px;
    text-align: center;
    text-decoration: none;
  }

  nav a:hover {
    background: color-mix(in srgb, var(--color-primary), black 15%);
    transition: var(--transition);
  }

  .nav-mobile-visible {
    opacity: 1;
    visibility: visible;
  }

  @media screen and (max-width: 768px) {
    header {
      grid-column: 1/-1;
      height: initial;
      position: static;
      width: initial;
    }

    .top {
      align-items: center;
      display: grid;
      grid-template-columns: auto auto;
      justify-content: space-between;
      padding: 16px 32px;
    }

    .logo {
      gap: 16px;
      grid-template-columns: auto auto 1fr;
      padding: 0;

      > img {
        border-width: 2px;
        height: 48px;
      }
    }

    .hamburger {
      aspect-ratio: 1;
      background: none;
      border: none;
      display: block;
      height: 1.75rem;
      padding: 0;

      > img {
        height: 100%;
        width: 100%;
      }
    }

    nav {
      opacity: 0;
      position: absolute;
      transition: var(--transition);
      visibility: hidden;
      width: 100%;
    }
  }
</style>
